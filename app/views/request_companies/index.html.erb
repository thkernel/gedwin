<p id="notice"><%= notice %></p>

<h1>Request Companies</h1>

<table>
  <thead>
    <tr>
      <th>Request</th>
      <th>Company name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_companies.each do |request_company| %>
      <tr>
        <td><%= request_company.request %></td>
        <td><%= request_company.company_name %></td>
        <td><%= request_company.status %></td>
        <td><%= link_to 'Show', request_company %></td>
        <td><%= link_to 'Edit', edit_request_company_path(request_company) %></td>
        <td><%= link_to 'Destroy', request_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

