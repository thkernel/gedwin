<% @abilities.each do |ability| %>
    <tr>
    <td><%= role(ability.role_id).name %></td>
   
    <td><%= feature(ability.feature_id).name %></td>
    <td>
    <% ability.ability_items.each do |item| %>
        <span class="permission-item">
        <%= t("#{item.permission.name}") %>
        </span>
    <% end %>
    </td>
    <td>
	    <div class="action-buttons">
			<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_ability_path(ability), title: "Modifier", remote: true %>




<%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>
'), ability_delete_path(ability), remote: true, title: "Supprimer", class: "delete" %>
</div>
</td>
    </tr>
<% end %>