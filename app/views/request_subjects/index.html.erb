<p id="notice"><%= notice %></p>

<h1>Request Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Request</th>
      <th>Subject name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_subjects.each do |request_subject| %>
      <tr>
        <td><%= request_subject.request %></td>
        <td><%= request_subject.subject_name %></td>
        <td><%= request_subject.status %></td>
        <td><%= link_to 'Show', request_subject %></td>
        <td><%= link_to 'Edit', edit_request_subject_path(request_subject) %></td>
        <td><%= link_to 'Destroy', request_subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

